body
  padding: 20px 0px auto 0px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: inherit
a:hover
  color inherit
  text-decoration none
  cursor pointer
  

/*
  OUTER NAV CSS
*/

.navbar ul li a
    text-decoration none
    cursor pointer
    color #4A4A4A
    font-family 'Work Sans', sans-serif
    font-size 18px
    
.navbar button
    cursor pointer

.main-logo
    font-family: 'Dancing Script', cursive;
    font-size 38px
    color #4A4A4A
    display flex
    justify-content center

.navbar .active
    color #A7A7A7

.outer-nav
    height 60px

.main-nav-btn
    padding-left 10px
    cursor pointer

/*
  INDEX CSS
*/

.standard-container
    height 400px
    margin 80px auto
    
.main-caption
    margin 80px auto auto auto
    font-family 'Work Sans', sans-serif
    text-align center
  
.sub-caption
    margin 30px auto auto auto
    font-family 'Work Sans', sans-serif
    color #4A4A4A
    text-align center

.main-cta-btn
    margin 50px auto auto auto
    display flex
    justify-content center
    cursor pointer
  
.see-video
  margin 20px auto auto auto
  display flex
  text-size 20px
  justify-content center
  cursor pointer

/*
    LOGIN CSS
*/

.login-form-container
    padding 25px
    margin 20px
    input
        margin-bottom 20px

.login-main-container
    background rgb(52, 152, 219)
    padding-top 100px
    height 100vh

/*
  Inner TOP FIXED nav CSS
*/

.top-nav-fixed
  width 100%
  background-color white
  position absolute
  top 0
  left 0
  box-shadow: 0 2px 4px -1px gray;  
  .dropdown-menu
      // needed for displaying dropdown the right way
      position absolute !important

.navbar
  .navbar-nav li a 
    font-size 14px
    &:hover 
      color: #4A4A4A;
      background-color: transparent;
      -webkit-box-shadow: none;
      -moz-box-shadow: none;
      box-shadow: none;
    &:focus 
      color: #4A4A4A;
      background-color: transparent;
      -webkit-box-shadow: none;
      -moz-box-shadow: none;
      box-shadow: none;
    &:active 
      color: #4A4A4A;
      background-color: transparent;
      -webkit-box-shadow: none;
      -moz-box-shadow: none;
      box-shadow: none;

.main-logo-inner-nav
    font-family: 'Dancing Script', cursive;
    font-size 26px
    color #4A4A4A
    display flex
    justify-content center

.navbar-nav 
  display inline-block


.navbar-nav > li 
   display inline-block
   margin auto 20px auto auto
   
.navbar-nav > li > a
    font-size 14px !important



/*
  Inner SIDE nav CSS
*/

.inner-side-nav-container
  width 240px
  position absolute
  left 0
  top 0
  background-color #282829
  padding 0
  height 100vh
  border-right 1px solid grey
  
.inner-side-nav
  margin 120px auto auto auto

.inner-side-nav ul
  padding 0
  li.active
    color white

.inner-side-nav li
  color #c9c9cc
  font-family "Open Sans", sans-serif
  list-style-type none
  width 100%
  margin-left 0
  padding 20px 15px 20px 55px
  font-size 14px
  &:hover
      background-color: rgb(255, 255, 255);
      background-color: rgba(255, 255, 255, 0.07);
      cursor pointer
  .link-text
      margin-left 15px
      letter-spacing 0.5px



/*
  CSS for inner templates, the screen that displays between the two navbars
*/

/*
  Overview subview CSS
*/

.inner-main-container
    background-color #F9F9FA
    height 100vh
    width 100%
  
.inner-template-container
    margin 50px auto auto 240px
    padding 20px
    width: -webkit-calc(100% - 240px);
    width:    -moz-calc(100% - 240px);
    width:         calc(100% - 240px);
    .greeting-header
        margin 10px auto 10px auto
        font-family "Work Sans", sans-serif
        font-size 28px
        color #212529
        padding 20px
        border-bottom 1px solid whitesmoke

.inner-overview-container
    padding 30px
    background-color white
    border 1px solid whitesmoke
    .number-container
        font-size 32px
        font-family "Work Sans", sans-serif

.inner-overview-table
    margin auto auto 20px auto
    padding-top 30px
    padding-bottom 30px
    border-bottom 1px solid whitesmoke
    

.overview-graph-container
    height 300px

.loading-element
  left 50%
  position absolute
  top 120px
  transform: translate(-50%, 0);

/*
  Portfolio overview subview css
*/

.portfolio-overview-table
    font-family "Work Sans", sans-serif
    font-size 16px


.portfolio-overview-headers
    border-bottom 1px solid whitesmoke
    padding-bottom 20px
    margin-bottom 20px
    
.portfolio-overview-row
    margin-top 20px
    margin-bottom 10px
    &:hover
      cursor pointer
      color rgba(1,1,1,0.6)

.portfolio-details
  border-top 1px solid whitesmoke
  border-bottom 1px solid whitesmoke
  padding 20px
  margin-top 10px
  margin-bottom 20px
  display none
  button, a
      cursor pointer
      
.holdings-overview-table
  margin-top 50px
  
.portfolio-chevron
    transition .2s all

.rotate
    -webkit-transform rotate(90deg)
    -moz-transform rotate(90deg)
    -o-transform rotate(90deg)
    -ms-transform rotate(90deg)
    transform rotate(90deg)
      
/*
  Portfolio details CSS
*/

.sub-option
    margin-top 15px
    .form
        margin-top 10px
